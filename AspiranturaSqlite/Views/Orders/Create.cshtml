@model AspiranturaSqlite.Models.Order

        <h4>Новий наказ</h4>
        <hr />

        <div class="row">
            <div>
                <form asp-action="CreateAsync">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group col-lg-2">
                        <label asp-for="Number" class="control-label"></label>
                        <input asp-for="Number" class="form-control" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-3">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4">
                        <label asp-for="Context" class="control-label"></label>
                        <input asp-for="Context" class="form-control" />
                        <span asp-validation-for="Context" class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-3">
                        <label asp-for="OrdertypeId" class="control-label"></label>
                        <select asp-for="OrdertypeId" class="form-control" asp-items="ViewBag.OrdertypeId"></select>
                        <span asp-validation-for="OrdertypeId" class="text-danger"></span>
                    </div>


                    <div class="col-lg-1">
                        Відм.
                    </div>
                    <div class="col-lg-5">
                        Прізвище, ім'я, по-батькові
                    </div>
                    <div class="col-lg-1">
                        Курс
                    </div>
                    <div class="col-lg-1">
                        Дата вступу
                    </div>
                    <div class="col-lg-3">
                        Статус
                    </div>
                    <div class="col-lg-1">
                        Захист
                    </div>


                    <div class="form-group">
                        @Html.EditorFor(model => model.Aspirants)
                    </div>
                    <div class="form-group col-lg-12">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

